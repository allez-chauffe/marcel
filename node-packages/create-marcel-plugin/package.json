{
  "name": "create-marcel-plugin",
  "version": "1.1.0",
  "description": "The marcel-plugin generator",
  "bin": {
    "create-marcel-plugin": "./src/index.js"
  },
  "repository": "https://github.com/allez-chauffe/marcel",
  "author": "Valentin Cocaud",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint src",
    "start": "rm -rf example && node ./src/index.js example"
  },
  "files": [
    "src",
    "LICENSE"
  ],
  "devDependencies": {
    "eslint": "^7.19.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "to-camel-case": "^1.0.0"
  }
}
